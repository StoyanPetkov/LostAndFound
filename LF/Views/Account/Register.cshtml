@model LF.Models.RegisterViewModel

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/CustomCSS/registerView.css")" />

@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Създаване на нов профил.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email,"Електронна поща", new { @class = "col-md-2 control-label", @autocomplete = "on" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Парола", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @autocomplete = "on" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Повтори парола", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @autocomplete = "on" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Държава", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.HiddenFor(x => x.RegionId)
            @Html.HiddenFor(x => x.CityId)
            @Html.DropDownListFor(model => model.CountryId, Model.Countries, " --Избери-- ", new { @class = "form-control", @Id = "CountriesDDL" })
        </div>
    </div>
    <div class="RegionsDDL">
    </div>
    <div class="CitiesDDL">
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Регистрация" id="submitFormBtn" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval"),
    @Scripts.Render("~/bundles/customBundleScript"),
}
